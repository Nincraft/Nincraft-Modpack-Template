<assembly>
	<id>server</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<componentDescriptors>
		<componentDescriptor>assemblies/component-common.xml</componentDescriptor>
		<componentDescriptor>assemblies/component-server.xml</componentDescriptor>
	</componentDescriptors>
	<fileSets>
		<fileSet>
			<directory>common/prod</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>mods/*.*</include>
				<include>mods/${mcVersion}/*.*</include>
				<include>scripts/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>server/prod</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>mods/*.*</include>
				<include>mods/${mcVersion}/*.*</include>
				<include>scripts/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>server/prod</directory>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
			<includes>
				<include>*.properties</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
