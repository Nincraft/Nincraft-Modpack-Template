<assembly>
    <id>client-curse</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>manifest.json</source>
            <outputDirectory/>
            <filtered>true</filtered>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>common/base/config</directory>
            <outputDirectory>overrides/config</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>common/prod/config</directory>
            <outputDirectory>overrides/config</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>client/base/config</directory>
            <outputDirectory>overrides/config</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>client/prod/config</directory>
            <outputDirectory>overrides/config</outputDirectory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>common/base/scripts</directory>
            <outputDirectory>overrides/scripts</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>common/prod/scripts</directory>
            <outputDirectory>overrides/scripts</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>client/base/scripts</directory>
            <outputDirectory>overrides/scripts</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>client/prod/scripts</directory>
            <outputDirectory>overrides/scripts</outputDirectory>
        </fileSet>
        <fileSet>
            <!-- For mods that put configs in the mods folder, like Millenaire -->
            <directory>common/base/mods</directory>
            <outputDirectory>overrides/mods</outputDirectory>
            <excludes>
                <exclude>**/*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <!-- For mods that put configs in the mods folder, like Millenaire -->
            <directory>common/prod/mods</directory>
            <outputDirectory>overrides/mods</outputDirectory>
            <excludes>
                <exclude>**/*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <!-- For mods that put configs in the mods folder, like Millenaire -->
            <directory>client/base/mods</directory>
            <outputDirectory>overrides/mods</outputDirectory>
            <excludes>
                <exclude>**/*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <!-- For mods that put configs in the mods folder, like Millenaire -->
            <directory>client/prod/mods</directory>
            <outputDirectory>overrides/mods</outputDirectory>
            <excludes>
                <exclude>**/*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <!-- For mods that Curseforge can't pick up, like experimental ones -->
            <directory>common/base/mods/thirdParty</directory>
            <outputDirectory>overrides/mods</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <!-- For mods that Curseforge can't pick up, like experimental ones -->
            <directory>common/prod/mods/thirdParty</directory>
            <outputDirectory>overrides/mods</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <!-- For mods that Curseforge can't pick up, like experimental ones -->
            <directory>client/base/mods/thirdParty</directory>
            <outputDirectory>overrides/mods</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <!-- For mods that Curseforge can't pick up, like experimental ones -->
            <directory>client/prod/mods/thirdParty</directory>
            <outputDirectory>overrides/mods</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
