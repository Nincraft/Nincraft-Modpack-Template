<assembly>
	<id>client-curse</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>manifest.json</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>common/base</directory>
			<outputDirectory>/overrides</outputDirectory>
			<includes>
				<include>scripts/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<!-- For mods that put configs in the mods folder, like Millenaire -->
			<directory>common/base</directory>
			<outputDirectory>/overrides</outputDirectory>
			<includes>
				<include>mods/**/*.*</include>
			</includes>
			<excludes>
				<exclude>mods/*.jar</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>common/prod</directory>
			<outputDirectory>/overrides</outputDirectory>
			<includes>
				<include>scripts/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>common/base/config</directory>
			<outputDirectory>/overrides/config</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>common/prod/config</directory>
			<outputDirectory>/overrides/config</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>client/base</directory>
			<outputDirectory>/overrides</outputDirectory>
			<includes>
				<include>scripts/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>client/prod</directory>
			<outputDirectory>/overrides</outputDirectory>
			<includes>
				<include>scripts/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>client/base/config</directory>
			<outputDirectory>/overrides/config</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>client/prod/config</directory>
			<outputDirectory>/overrides/config</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
	</fileSets>
</assembly>
