<assembly>
    <id>client</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <componentDescriptors>
        <componentDescriptor>assemblies/component-common-base-configs.xml</componentDescriptor>
        <componentDescriptor>assemblies/component-common-base-loaders.xml</componentDescriptor>
        <componentDescriptor>assemblies/component-common-base-mods.xml</componentDescriptor>
        <componentDescriptor>assemblies/component-common-base-mods-thirdparty.xml</componentDescriptor>
        <componentDescriptor>assemblies/component-common-base-scripts.xml</componentDescriptor>
        <componentDescriptor>assemblies/component-common-dev-configs.xml</componentDescriptor>
        <componentDescriptor>assemblies/component-common-dev-mods.xml</componentDescriptor>
        <componentDescriptor>assemblies/component-common-dev-mods-thirdparty.xml</componentDescriptor>
        <componentDescriptor>assemblies/component-common-dev-scripts.xml</componentDescriptor>
        <componentDescriptor>assemblies/component-client-base-configs.xml</componentDescriptor>
        <componentDescriptor>assemblies/component-client-base-mods.xml</componentDescriptor>
        <componentDescriptor>assemblies/component-client-base-mods-thirdparty.xml</componentDescriptor>
        <componentDescriptor>assemblies/component-client-base-scripts.xml</componentDescriptor>
        <componentDescriptor>assemblies/component-client-dev-configs.xml</componentDescriptor>
        <componentDescriptor>assemblies/component-client-dev-mods.xml</componentDescriptor>
        <componentDescriptor>assemblies/component-client-dev-mods-thirdparty.xml</componentDescriptor>
        <componentDescriptor>assemblies/component-client-dev-scripts.xml</componentDescriptor>
    </componentDescriptors>
    <fileSets>
        <fileSet>
            <!-- For mods that put configs in the mods folder, like Millenaire -->
            <directory>common/base/mods</directory>
            <outputDirectory>mods</outputDirectory>
            <excludes>
                <exclude>**/*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <!-- For mods that put configs in the mods folder, like Millenaire -->
            <directory>common/prod/mods</directory>
            <outputDirectory>mods</outputDirectory>
            <excludes>
                <exclude>**/*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <!-- For mods that put configs in the mods folder, like Millenaire -->
            <directory>client/base/mods</directory>
            <outputDirectory>mods</outputDirectory>
            <excludes>
                <exclude>**/*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <!-- For mods that put configs in the mods folder, like Millenaire -->
            <directory>client/prod/mods</directory>
            <outputDirectory>mods</outputDirectory>
            <excludes>
                <exclude>**/*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>client/dev/nincraft</directory>
            <outputDirectory/>
            <includes>
                <include>config/*.*</include>
                <include>mods/*.*</include>
                <include>mods/${mcVersion}/*.*</include>
                <include>scripts/*.*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
